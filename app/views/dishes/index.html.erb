<div class="white-bg">

  <h2><%=@category.name%></h2>
  <div class="add-dish">
  <%= link_to '+ Add a Dish', new_category_dish_path(params[:category_id]) %>
  </div>
  <div class="dishes">
    <% @dishes.each do |dish| %>
        <h3><%= link_to dish.title, [dish.category, dish] %></h3>
        <div>
          <%= render partial: "votes/vote", locals: { dish: dish } %>
          <div><span class="vote-count" id="vote-count-<%= dish.id %>"><%= dish.votes.count %></span>
          </div>
          <div>
            made by <%= link_to dish.user.username, user_path(dish.user) %>
          </div>
          <div>
            Time: <%= dish.prep_time %> minutes
          </div>
        </div>
      <% end %>
  </div>
      <br />
  </div>
</div>
